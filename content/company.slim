    #technology.tab-pane.company-tab--tech role="tabpanel"
      ul.technology-list
        li.technology-list-item
          figure
            img alt="" height="60" src="/assets/images/icons/png/javascript.png" width="60" /
          .technology-list-snippet
            erb:
              <pre><strong>function</strong> <b class="style1">factorial</b>(<b class="style1">n</b>) {
                  <strong>if</strong> (<b class="style1">n</b> === <b class="style2">0</b>) {
                      <strong>return</strong> <b class="style2">1</b>;
                  }
                  <strong>return</strong> <b class="style1">n</b> * <b class="style1">factorial</b>(<b class="style1">n</b> - <b class="style2">1</b>);
              }</pre>

        li.technology-list-item
          figure
            img alt="" height="60" src="/assets/images/icons/png/clojure.png" width="200" /
          .technology-list-snippet
            erb:
              <pre>(<strong>let</strong> [<b class="style1">i</b> (<b class="style1">atom</b> <b class="style2">0</b>)]
                (<strong>defn</strong> <b class="style1">generate-unique-id</b>
                  "Returns a distinct numeric ID for each call."
                  []
                  (<b class="style1">swap</b>! <b class="style1">i</b> <b class="style2">inc</b>)))</pre>

        li.technology-list-item
          figure
            img alt="" height="60" src="/assets/images/icons/png/java.png" width="97" /
          .technology-list-snippet
            erb:
              <pre><strong>class</strong> <b>HelloWorldApp</b> {
                <strong>public static</strong> <b class="style2">void</b> <b class="style1">main</b>(<b class="style1">String</b>[] <b class="style1">args</b>) {
                    <b class="style1">System</b>.out.println("<b class="style2">Hello World!</b>");
                }
              }</pre>
        li.technology-list-item
          figure
            img alt="" height="60" src="/assets/images/icons/png/python.png" width="187" /
          .technology-list-snippet
            erb:
              <pre><strong>def</strong> <b class="style1">average</b>(<b class="style1">iterable</b>):
                <strong>try</strong>:
                    <strong>return</strong> <b class="style2">sum</b>(<b class="style1">iterable</b>) / <b class="style2">float</b>(<b class="style2">len</b>(<b class="style1">iterable</b>))
                <strong>except</strong>:
                    <strong>return</strong> <b class="style2">0.0</b></pre>
        li.technology-list-item
          figure
            img alt="" height="60" src="/assets/images/icons/png/ruby.png" width="61" /
          .technology-list-snippet
            erb:
              <pre><b class="style2">puts</b> "<b class="style2">Give me a number</b>"
              <b class="style1">number</b> = <b class="style2">gets</b>.chomp
              <b class="style2">puts</b> <b class="style1">number.to_i</b>
              <b class="style1">output_number</b> = <b class="style1">number.to_i</b> + <b class="style2">1</b>
              <b class="style2">puts</b> <b class="style1">output_number.to_s</b> + '<b class="style2"> is a bigger number.</b>'</pre>
        li.technology-list-item
